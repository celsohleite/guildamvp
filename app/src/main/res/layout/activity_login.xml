<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange"
    android:orientation="vertical"
    tools:context=".ui.login.view.LoginActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_login"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/legal"
            app:layout_constraintBottom_toTopOf="@+id/space_edtText"/>

        <TextView
            android:id="@+id/lbl_guilda_legals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/lbl_guilda_legal"
            app:layout_constraintTop_toBottomOf="@id/space_edtText"/>

        <android.support.v4.widget.Space
                android:id="@+id/space_edtText"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:paddingHorizontal="10dp"
                app:layout_constraintBottom_toTopOf="@+id/edt_user"
                tools:ignore="MissingConstraints"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lbl_user"
            app:layout_constraintBottom_toTopOf="@+id/edt_password"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lbl_password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="@+id/edt_user"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBtn"
            android:text="@string/btn_acesso"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/edt_password"
            tools:layout_editor_absoluteX="20dp" />

    </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>